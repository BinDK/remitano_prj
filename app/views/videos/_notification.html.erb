<div class="fixed top-5 right-5 p-4 text-gray-500 bg-white rounded-lg shadow-sm dark:text-gray-400 dark:bg-gray-800 z-50" onclick="this.remove()">
  <div class="flex items-center justify-between">
    <div class="flex items-center space-x-3 rtl:space-x-reverse">
      <div>
        <p class="text-sm font-bold text-gray-900 dark:text-white">New Video Shared!</p>
        <p class="text-sm font-normal">
          <%= video&.user.email || 'Someone' %> shared "<%= video&.title ? video.title.truncate(40) : 'a video' %>"
        </p>
      </div>
    </div>
    <button class="text-gray-400 hover:text-gray-900 dark:hover:text-white">
      <%= render partial: 'icons/x-mark' %>
    </button>
  </div>
</div>
